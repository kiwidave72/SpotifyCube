<Window x:Class="Spotify.Cube.UI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="1025" Loaded="Window_Loaded">

    <Grid >
        <StackPanel>
            <TextBox Text="{Binding X_Angle}"></TextBox>
            <TextBox Text="{Binding Y_Angle}"></TextBox>
            <TextBox Text="{Binding Z_Angle}"></TextBox>
            <TextBox Text="{Binding Z_Acel}"></TextBox>

            <StackPanel Orientation="Horizontal">
                <Label>Default Volume</Label>
                <TextBox Text="{Binding DefaultVolume}"></TextBox>
            </StackPanel>

            
            <StackPanel Orientation="Horizontal">
                <Label>Volume</Label>
                <TextBox Text="{Binding Volume}"></TextBox>
            </StackPanel>

            

            <StackPanel Orientation="Horizontal">
                <Label>Gesture</Label>
                <TextBox Text="{Binding Gesture}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Serial Input</Label>
                <TextBox Text="{Binding SerialMessage}"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
