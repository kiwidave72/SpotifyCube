<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Spotify.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/TabControl.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/Button.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/ScrollViewer.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/CheckBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/Hyperlink.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/DataGrid.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/ListBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/PasswordBox.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/Spotify.Client;component/Themes/Slider.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush
                x:Key="ControlTextBrush"
                Color="White" />
            
            <SolidColorBrush
                x:Key="DisabledControlTextBrush"
                Color="#FFAAAAAA" />
            
            <LinearGradientBrush
                x:Key="TextBox_Border"
                EndPoint="0,20"
                MappingMode="Absolute"
                StartPoint="0,0">
                <GradientStop
                    Color="#ABADB3"
                    Offset="0.05" />
                <GradientStop
                    Color="#E2E3EA"
                    Offset="0.07" />
                <GradientStop
                    Color="#E3E9EF"
                    Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush
                x:Key="TextBox_MouseOver"
                EndPoint="0,1"
                StartPoint="0,0">
                <GradientStop
                    Color="#5794BF"
                    Offset="0.05" />
                <GradientStop
                    Color="#B7D5EA"
                    Offset="0.07" />
                <GradientStop
                    Color="#C7E2F1"
                    Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush
                x:Key="TextBox_Focused"
                EndPoint="0,1"
                StartPoint="0,0">
                <GradientStop
                    Color="#3D7BAD"
                    Offset="0.05" />
                <GradientStop
                    Color="#A4C9E3"
                    Offset="0.07" />
                <GradientStop
                    Color="#B7D9ED"
                    Offset="1" />
            </LinearGradientBrush>

            <SolidColorBrush
                x:Key="TextBox_DisabledBorder"
                Color="#ADB2B5" />

            <SolidColorBrush
                x:Key="TextBox_DisabledBackground"
                Color="#F4F4F4" />

            <RadialGradientBrush
                x:Key="Star_NormalFillBrush"
                RadiusX="0.534043"
                RadiusY="0.559581"
                Center="0.5,0.5"
                GradientOrigin="0.5,0.5">
                <RadialGradientBrush.GradientStops>
                    <GradientStop
                        Color="#FF373636"
                        Offset="0.195349" />
                    <GradientStop
                        Color="#FF000000"
                        Offset="0.893023" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>

            <SolidColorBrush
                x:Key="Star_NormalStrokeBrush"
                Color="#FF313131" />

            <SolidColorBrush
                x:Key="Star_MouseOverFillBrush" />

            <SolidColorBrush
                x:Key="Star_MouseOverStrokeBrush" />

            <SolidColorBrush
                x:Key="Star_PressedFillBrush"
                Color="Orange"/>

            <SolidColorBrush
                x:Key="Star_PressedStrokeBrush" 
                Color="Yellow"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
