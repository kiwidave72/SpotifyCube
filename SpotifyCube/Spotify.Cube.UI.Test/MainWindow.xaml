<Window x:Class="Spotify.Cube.UI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify Cube (Xero ship-it day 2015)" Height="350" Width="1025" Loaded="Window_Loaded" Closed="Window_Closed">

    <Grid >
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Track Title</Label>
                <TextBox Text="{Binding TrackTitle}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Default Volume</Label>
                <TextBox Text="{Binding DefaultVolume}"></TextBox>
            </StackPanel>

            
            <StackPanel Orientation="Horizontal">
                <Label>Volume</Label>
                <TextBox Text="{Binding Volume}"></TextBox>
            </StackPanel>

            

            <StackPanel Orientation="Horizontal">
                <Label>Gesture</Label>
                <TextBox Text="{Binding Gesture}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Serial Input</Label>
                <TextBox Text="{Binding SerialMessage}"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
